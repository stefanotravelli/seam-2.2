<?xml version="1.0"?>
<!DOCTYPE facelet-taglib PUBLIC
   "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
   "facelet-taglib_1_0.dtd">
   
<facelet-taglib>
    <namespace>http://jboss.com/products/seam/mail</namespace>

    <tag>
        <tag-name>message</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UIMessage</component-type>
        </component>
    </tag>

    <tag>
        <tag-name>bcc</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UIBcc</component-type>
        </component>
    </tag>
    
     <tag>
        <tag-name>cc</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UICc</component-type>
        </component>
    </tag>
    
     <tag>
        <tag-name>from</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UIFrom</component-type>
        </component>
    </tag>
    
     <tag>
        <tag-name>body</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UIBody</component-type>
        </component>
    </tag>
    
     <tag>
        <tag-name>subject</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UISubject</component-type>
        </component>
    </tag>
    
     <tag>
        <tag-name>to</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UITo</component-type>
        </component>
    </tag>
    
    <tag>
        <tag-name>replyTo</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UIReplyTo</component-type>
        </component>
    </tag>
    
    <tag>
        <tag-name>header</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UIHeader</component-type>
        </component>
    </tag>
    <tag>
        <tag-name>attachment</tag-name>
        <component>
            <component-type>org.jboss.seam.mail.ui.UIAttachment</component-type>
        </component>
    </tag>
</facelet-taglib>
